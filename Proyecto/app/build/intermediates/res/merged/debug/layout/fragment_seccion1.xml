<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

<LinearLayout
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:orientation="vertical">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/s1_textview"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:textSize="48dp" />


    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="40dp"
        android:fontFamily="serif"
        android:text="Mensajeria"
        android:textSize="30dp" />

    <ImageButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:tag="m1"
        android:id="@+id/holas"
        android:layout_marginTop="2dp"
        android:background="@drawable/whatsapp"
        android:onClick="CursosMensajeria" />

    <ImageButton
        android:id="@+id/holass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        android:background="@drawable/instagram"
        android:onClick="CursosMensajeria"
        android:tag="m2" />

    <ImageButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:tag="m3"
        android:id="@+id/holasss"
        android:layout_marginTop="9dp"
        android:background="@drawable/facebook"
        android:onClick="CursosMensajeria"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Redes Sociales"
        android:textSize="30dp"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="10dp"
        android:fontFamily="serif"/>

    <ImageButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:tag="s1"
        android:id="@+id/holase"
        android:layout_marginTop="2dp"
        android:background="@drawable/whatsapp"
        android:onClick="CursosMensajeria"/>

    <ImageButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:tag="s2"
        android:id="@+id/holasee"
        android:layout_marginTop="9dp"
        android:background="@drawable/instagram"
        android:onClick="CursosMensajeria"/>

    <ImageButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:tag="s3"
        android:id="@+id/holaseee"
        android:layout_marginTop="9dp"
        android:background="@drawable/facebook"
        android:onClick="CursosMensajeria"/>



</LinearLayout>

    </ScrollView>